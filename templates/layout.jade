!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='/2013/css/bootstrap.min.css')
      link(rel='stylesheet', href='/2013/css/ss-social.css')
      link(rel='stylesheet', href='/2013/css/app.css')
      //if lt IE 9
        script(src='/js/html5shiv.js')
      include analytics
      +analytics('UA-22691589-4')
  body(class=bodyclass)
    nav.navbar.navbar-fixed-top.navbar-inverse(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/2013/', title=locals.name, rel='home')
            img(alt=locals.name, src='/2013/img/iccsw-logo-cs13.png')
        .collapse.navbar-collapse.nav-collapse
          include menu
          ul.nav.navbar-nav
            +menu('Call for Papers', '/2013/cfp.html')
            +menu('Programme', '/2013/programme.html')
            +menu('Keynotes', '/2013/keynotes.html')
            +menu('Location', '/2013/location.html')
            +menu('Organisation', '/2013/organisation.html')
            +menu('Registration', '/2013/registration.html')
            +menu('FAQ', '/2013/faq.html')
    .container
      header.subhead
        a(href=locals.url)
          img(alt=locals.name, src='/2013/img/logo.jpg')
        block subhead
      section.content
        block content
    footer.footer
      .container
        block footer
          .pull-right
            ul.services.list-unstyled
              li.twitter
                a.ss-icon.ss-social-circle.ss-twitter(href='https://twitter.com/iccsw2013')
              li.facebook
                a.ss-icon.ss-social-circle.ss-facebook(href='https://facebook.com/iccsw2013')
              li.linkedin
                a.ss-icon.ss-social-circle.ss-linkedin(href='http://www.linkedin.com/groups/ICCSW-13-5128593')
          p.credit
            Copyright &copy; 2013 
            a(href='http://www3.imperial.ac.uk/') Imperial College London
            , 
            a(href='http://www3.imperial.ac.uk/computing/') Department of Computing
            Research Students
    script(src='http://code.jquery.com/jquery-latest.js')
    script(src='/2013/js/bootstrap.min.js')
    script(src='/2013/js/app.js')
